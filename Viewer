  <script>
    // ---- Configuration (edit before sending) ----
    const CREDENTIALS = { username: 'client', password: 'secret123' };
    const CLIENT_NAME = 'LEA Associates South Asia Pvt. Ltd.'; // customize
    const ORTHO_FILENAME = 'ortho.jpg'; // file name to place alongside this HTML
    // --------------------------------------------

    const loginForm = document.getElementById('loginForm');
    const statusText = document.getElementById('statusText');
    const loginBadge = document.getElementById('loginBadge');
    const orthoImg = document.getElementById('orthoImg');
    const placeholder = document.getElementById('placeholder');
    const clientLabel = document.getElementById('clientLabel');
    const fileLabel = document.getElementById('fileLabel');
    const downloadBtn = document.getElementById('downloadBtn');
    const logoutBtn = document.getElementById('logoutBtn');

    fileLabel.textContent = ORTHO_FILENAME;

    function setLoggedIn(username){
      sessionStorage.setItem('ortho_logged_in', '1');
      sessionStorage.setItem('ortho_user', username);
      statusText.textContent = 'Logged in as ' + username;
      loginBadge.textContent = 'Signed in';
      clientLabel.textContent = 'Client: ' + CLIENT_NAME;
      downloadBtn.disabled = false;
      logoutBtn.disabled = false;
      showImage();
    }
    function setLoggedOut(){
      sessionStorage.removeItem('ortho_logged_in');
      sessionStorage.removeItem('ortho_user');
      statusText.textContent = 'Logged out';
      loginBadge.textContent = 'Not signed in';
      clientLabel.textContent = 'Client: ‚Äî';
      downloadBtn.disabled = true;
      logoutBtn.disabled = true;
      hideImage();
    }

    function hideImage(){
      orthoImg.classList.add('hidden');
      placeholder.style.display = 'block';
    }
    function showImage(){
      // attempt to load image; if it fails, show a message
      orthoImg.src = ORTHO_FILENAME + '?v=' + Date.now();
      orthoImg.onload = ()=>{
        orthoImg.classList.remove('hidden');
        placeholder.style.display = 'none';
      }
      orthoImg.onerror = ()=>{
        placeholder.innerHTML = '<div style="color:var(--muted)">Orthophoto not found: <strong>'+ORTHO_FILENAME+'</strong><br>Place the file in the same folder as this HTML or check filename.</div>';
        orthoImg.classList.add('hidden');
      }
    }

    // On load, respect session
    window.addEventListener('load', ()=>{
      if(sessionStorage.getItem('ortho_logged_in')){
        setLoggedIn(sessionStorage.getItem('ortho_user'));
      } else setLoggedOut();
    });

    loginForm.addEventListener('submit', (e)=>{
      e.preventDefault();
      const u = document.getElementById('username').value.trim();
      const p = document.getElementById('password').value;

      // Simple client-side check (demo). Replace with server-side for production.
      if(u === CREDENTIALS.username && p === CREDENTIALS.password){
        setLoggedIn(u);
        alert('Access granted ‚Äî ortho viewer unlocked.');
      } else {
        statusText.textContent = 'Invalid credentials';
        loginBadge.textContent = 'Auth failed';
        alert('Invalid username or password');
      }
    });

    logoutBtn.addEventListener('click', ()=>{
      setLoggedOut();
      alert('You have been logged out.');
    });

    downloadBtn.addEventListener('click', ()=>{
      // trigger download of ortho file
      const a = document.createElement('a');
      a.href = ORTHO_FILENAME;
      a.download = ORTHO_FILENAME;
      document.body.appendChild(a);
      a.click();
      a.remove();
    });

    // accessibility: allow Enter to submit from password
    document.getElementById('password').addEventListener('keydown', (e)=>{
      if(e.key === 'Enter') loginForm.dispatchEvent(new Event('submit'));
    });

    // Prevent directory listing in some file servers by rewriting path (best-effort)
    // Note: Not a security feature.
  </script>
</body>
